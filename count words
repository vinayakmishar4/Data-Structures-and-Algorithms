#include <iostream>

using namespace std;

int main()
{
    string str="  hello   my name is tony";
    int word=0;
    for(int i=0;str[i]!='\0';i++){
        if(str[i]==' ' && str[i+1]!=' '){
            word++;
        }
    }
    if(str[0]!=' '){
        word++;
    }
    else if(str[str.length()-1]==' '){
        word--;
    }
    
    
    
    cout<<word<<endl;
    return 0;
}
