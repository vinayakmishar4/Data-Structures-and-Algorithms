// find factoral of mumber by using recuion

#include<iostream>
using namespace std;

   int factorial(int n)
    {

   if(n==0)

   {

     return 1;
   
   }

   else 
   {

    return n*(n-1);   

   }

}

int main()

{
int n;
cin>>n;
cout<<"the factorial of number "<<endl<<n<<endl<<" total  ="<<factorial(n)<<endl;





}
