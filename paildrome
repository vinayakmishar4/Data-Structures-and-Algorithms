#include <iostream>
using namespace std;

int main()
{

   int n;
   int r;
   int sum=0;
   int temp;
   
   cout<<"enter the number"<<endl;
   cin>>n;

   while(n>0)

   {

     r=n%10;
     sum=sum*10+r;
     n=n/10;

   }

   if(temp==sum)

   {

      cout<<"number is not pailendrome"<<endl;
      
   }

   else

   {

     cout<<"number is  pailendrome"<<endl;

   }

}
